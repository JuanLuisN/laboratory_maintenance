<div class="container mt-5">
    <div class="card bg-dark border rounded-pill mb-4">
        <div class="card-header text-center text-white">
            <h1>USERS</h1>
            <hr>
            <div class="d-grid">
                <button type="button" class="btn btn-light w-50 mx-auto rounded-pill" data-bs-toggle="modal"
                    data-bs-target="#addUser">
                    <i class="fas fa-plus-square"></i> Add user
                </button>
            </div>
        </div>
    </div>
    <div class="row">
        {{#each users}}
        <div class="col-sm-12 col-md-4 col-lg-4">
            <div class="card bg-dark border rounded h-100">
                <div class="card-header text-white text-center">
                    <i class="fas fa-user-circle fa-5x"></i>
                    <h5 class="mt-3">{{username}}</h5>
                </div>
                <div class="card-body text-white text-center">
                    <h6 class="text-secondary">Full name</h6>
                    <p>{{fullname}}</p>
                    <h6 class="text-secondary">Email</h6>
                    <p>{{email}}</p>
                </div>
                <div class="card-footer">
                    <div class="d-grid">
                        <button type="button" class="btn btn-info mb-2" data-bs-toggle="modal"
                            data-bs-target="#editUser{{id}}"><i class="fas fa-edit"></i> Edit</button>
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal"
                            data-bs-target="#deleteUser{{id}}"><i class="fas fa-trash-alt"></i> Delete</button>
                    </div>
                </div>
            </div>
        </div>
        {{>adminComponents/usersModals/edit}}
        {{>adminComponents/usersModals/delete}}
        {{else}}
        <h3 class="text-center">You do not have users added</h3>
        {{/each}}
    </div>
</div>
{{>adminComponents/usersModals/add}}