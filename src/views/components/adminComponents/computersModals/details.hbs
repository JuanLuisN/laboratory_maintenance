<div class="modal fade" id="detailsComputer{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content bg-dark">
      <div class="modal-header text-white">
        <h5 class="modal-title" id="exampleModalLabel">DETAILS</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body text-white">
        <div class="row">
            <div class="col-sm-12 col-md-6">
                <h3>Components</h3>
                <p><i class="fas fa-memory"></i> Ram memory: <span class="text-secondary">{{ram_memory}}</span></p>
                <p><i class="fas fa-chess-board"></i> Motherboard: <span class="text-secondary">{{motherboard}}</span></p>
                <p><i class="fas fa-microchip"></i> CPU: <span class="text-secondary">{{cpu}}</span></p>
                <p><i class="fas fa-microchip"></i> GPU: <span class="text-secondary">{{gpu}}</span></p>
                <p><i class="fas fa-plug"></i> PSU: <span class="text-secondary">{{psu}}</span></p>
                <p><i class="fas fa-hdd"></i> Storage: <span class="text-secondary">{{storage}}</span></p>
            </div>
            <div class="col-sm-12 col-md-6">
                <h3>Peripherals</h3>
                <p><i class="fas fa-tv"></i> Display: <span class="text-secondary">{{display}}</span></p>
                <p><i class="fas fa-keyboard"></i> Keyboard: <span class="text-secondary">{{keyboard}}</span></p>
                <p><i class="fas fa-mouse"></i> Mouse: <span class="text-secondary">{{mouse}}</span></p>
                <p><i class="fas fa-volume-up"></i> Sound: <span class="text-secondary">{{sound}}</span></p>
            </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger rounded-pill" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>